<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:background="@drawable/ic_back"
    android:layout_height="match_parent"
    tools:context="com.wordpress.helpmevishal.mycontacts.SignUp">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Your Username"
        android:ems="10"
        android:background="@drawable/et_borders"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/et_s_username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/et_borders"
        android:hint="Enter Password"
        android:layout_below="@+id/et_s_username"
        android:layout_alignLeft="@+id/et_s_username"
        android:layout_alignStart="@+id/et_s_username"
        android:layout_marginTop="40dp"
        android:id="@+id/et_s_password"
        android:fontFamily="sans-serif" />

    <Button
        android:background="@drawable/button"
        android:text="Sign UP"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:id="@+id/btn_s_SignUp" />

</RelativeLayout>
