<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_back"
    tools:context="com.wordpress.helpmevishal.mycontacts.SearchContact">

<LinearLayout
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="Search Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textSize="15sp"
            />

        <Spinner
            android:background="@drawable/spinner"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView14"
            android:id="@+id/search_filter" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="Search Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textSize="15sp" />

        <Spinner
            android:background="@drawable/spinner"
            android:layout_marginRight="50dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_select" />

    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Found Contact"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:id="@+id/searched_content" />

</LinearLayout>


    </RelativeLayout>
